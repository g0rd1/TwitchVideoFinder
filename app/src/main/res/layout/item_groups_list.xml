<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "wrap_content">

	<ImageView
		android:id = "@+id/groups_list_item_edit"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginTop = "16dp"
		android:layout_marginEnd = "16dp"
		android:contentDescription = "@string/groups_list_item_edit_content_description"
		android:padding = "2dp"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintTop_toTopOf = "parent"
		app:srcCompat = "@android:drawable/ic_menu_edit" />

	<ImageView
		android:id = "@+id/groups_list_item_delete"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginTop = "16dp"
		android:layout_marginEnd = "16dp"
		android:contentDescription = "@string/groups_list_item_delete_content_description"
		android:padding = "2dp"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/groups_list_item_edit"
		app:srcCompat = "@android:drawable/ic_menu_delete" />

	<TextView
		android:id = "@+id/groups_list_item_video_count"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "16dp"
		android:layout_marginEnd = "16dp"
		android:textColor = "@android:color/black"
		android:textSize = "14sp"
		app:layout_constraintBottom_toBottomOf = "@+id/groups_list_item_delete"
		app:layout_constraintEnd_toStartOf = "@+id/groups_list_item_delete"
		app:layout_constraintHorizontal_bias = "0.0"
		app:layout_constraintStart_toStartOf = "parent"
		tools:text = "10 видео" />

	<TextView
		android:id = "@+id/groups_list_item_group_name"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "16dp"
		android:layout_marginEnd = "16dp"
		android:textColor = "@android:color/black"
		android:textSize = "20sp"
		app:layout_constraintEnd_toStartOf = "@+id/groups_list_item_edit"
		app:layout_constraintHorizontal_bias = "0.0"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toTopOf = "@+id/groups_list_item_edit"
		tools:text = "Название группы" />

	<View
		android:id = "@+id/divider"
		android:layout_width = "match_parent"
		android:layout_height = "1dp"
		android:layout_marginTop = "16dp"
		android:background = "@color/colorDivider"
		app:layout_constraintBottom_toBottomOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/groups_list_item_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>